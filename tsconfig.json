{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"esModuleInterop": false,
		"rootDir": "./src",
		"outDir": "./dist",
		"resolvePackageJsonExports": true
	}
}
